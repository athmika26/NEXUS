    <div class="main-content">
      <div class="header">
        <button id="menu-toggle">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <path d="M4 18h16v-2H4v2zm0-5h16v-2H4v2zm0-7v2h16V6H4z"></path>
          </svg>
        </button>
        <input type="text" id="search-input" placeholder="Search" oninput="handleSearch(this.value)">
      </div>
      <div class="note-input">
        <input type="text" id="add-title" placeholder="Take a note...">
        <textarea id="add-content" placeholder="Content"></textarea>
        <div class="note-actions">
          <button class="add-btn">Add New Note</button>
        </div>
      </div>
      <div class="notes">
        <p>Notes you add appear here</p>
        <div class="notes-list">
          <% notes.forEach(note => { %>
          <div class="note-box" data-note-id="<%= note._id %>">
            <h2><%= note.title %></h2>
            <p><%= note.content %></p>
            <div class="note-actions">
              <button class="edit-btn" data-note-id="<%= note._id %>">Edit</button>
              <button class="delete-btn" data-note-id="<%= note._id %>">Delete</button>
              <button class="archive-btn" data-note-id="<%= note._id %>">Archive</button>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <!-- Add new note button -->

      <!-- Modal for editing note -->
      <div id="edit-note-modal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <form>
            <label for="edit-title">Title</label>
            <textarea id="edit-title" name="edit-title"></textarea>
            <label for="edit-content">Content</label>
            <textarea id="edit-content" name="edit-content"></textarea>
            <button type="submit">Save</button>
          </form>
        </div>
      </div>
